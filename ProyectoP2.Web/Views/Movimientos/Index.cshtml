@model List<ProyectoP2.Web.Models.MovimientoInventario>

<div class="container mt-4">
    <h2 class="mb-4">📜 Historial de Movimientos (Kardex)</h2>

    <div class="row mb-4">
        <div class="col-md-6 offset-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="busqueda" class="form-control"
                           placeholder="Buscar por producto, tipo, usuario o comentario..."
                           value="@ViewData["BusquedaActual"]">

                    <button class="btn btn-primary" type="submit">
                        🔍 Buscar
                    </button>

                    @if (ViewData["BusquedaActual"] != null)
                    {
                        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                    }
                </div>
            </form>
        </div>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Producto</th>
                <th>Tipo</th>
                <th>Cantidad</th>
                <th>Usuario</th>
                <th>Comentario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // Lógica visual simple:
                // Si es ENTRADA o AJUSTE POSITIVO -> Verde
                // Si es SALIDA -> Rojo
                bool esPositivo = item.TipoMovimiento.ToUpper().Contains("ENTRADA") ||
                item.TipoMovimiento.ToUpper().Contains("COMPRA");

                <tr>
                    <td>@item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>

                    <td class="fw-bold">
                        @if (item.Producto != null)
                        {
                            @item.Producto.Nombre
                        }
                        else
                        {

                            <span class="text-muted">Desconocido</span>
                        }
                    </td>

                    <td>
                        @if (esPositivo)
                        {
                            <span class="badge bg-success">@item.TipoMovimiento</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@item.TipoMovimiento</span>
                        }
                    </td>

                    <td class="text-end">
                        @if (esPositivo)
                        {
                            <span class="text-success fw-bold">+ @item.Cantidad</span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">- @item.Cantidad</span>
                        }
                    </td>

                    <td>@item.UsuarioResponsable</td>
                    <td>@item.Observacion</td>
                </tr>
            }

            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No hay movimientos registrados aún.</td>
                </tr>
            }
        </tbody>
    </table>
</div>