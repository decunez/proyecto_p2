@using System
@model IEnumerable<ProyectoP2.Web.Models.Comprobante>

@{
    ViewData["Title"] = "Registro de Altas y Bajas";

    // 1. BLINDAJE DE PROVEEDORES:
    // Si ViewBag.Proveedores es null, creamos una lista vacía para que la página no explote.
    var listaProveedores = (ViewBag.Proveedores as SelectList) ?? new SelectList(new List<string>());

    // 2. BLINDAJE DE TIPO DE MOVIMIENTO:
    // Convert.ToString convierte nulls en "" automáticamente.
    string tipoActual = Convert.ToString(ViewData["TipoMovimiento"]);
}

<div class="container-fluid mt-4">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-arrow-left-right"></i> Registro de Altas y Bajas</h3>
        <div>
            <a asp-action="Create" class="btn btn-primary fw-bold">
                <i class="bi bi-plus-lg"></i> Nuevo Movimiento
            </a>
            <a asp-action="Historial" class="btn btn-info text-white ms-2 fw-bold">
                <i class="bi bi-clock-history"></i> Ver Kardex (Historial)
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-primary"><i class="bi bi-funnel"></i> Filtros de Búsqueda</h5>
        </div>
        <div class="card-body p-3 bg-white">
            <form asp-action="Index" method="get">
                <div class="row g-2 align-items-end">

                    <div class="col-md-2">
                        <label class="form-label small fw-bold text-muted">Desde:</label>
                        <input type="date" name="fechaInicio" class="form-control form-control-sm"
                               value="@ViewBag.FechaInicio" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label small fw-bold text-muted">Hasta:</label>
                        <input type="date" name="fechaFin" class="form-control form-control-sm"
                               value="@ViewBag.FechaFin" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label small fw-bold text-muted">Proveedor / Cliente:</label>
                        <select name="proveedorId" class="form-select form-select-sm" asp-items="listaProveedores">
                            <option value="">-- Todos --</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label small fw-bold text-muted">Tipo Movimiento:</label>
                        <select name="tipoMovimiento" class="form-select form-select-sm">
                            <option value="">-- Todos --</option>
                            @if (tipoActual == "ENTRADA")
                            {
                                <option value="ENTRADA" selected>ENTRADA</option>
                                <option value="SALIDA">SALIDA</option>
                            }
                            else if (tipoActual == "SALIDA")
                            {
                                <option value="ENTRADA">ENTRADA</option>
                                <option value="SALIDA" selected>SALIDA</option>
                            }
                            else
                            {
                                <option value="ENTRADA">ENTRADA</option>
                                <option value="SALIDA">SALIDA</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-sm flex-grow-1">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm" title="Limpiar filtros">
                            <i class="bi bi-x-lg"></i> Limpiar
                        </a>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Proveedor / Destino</th>
                            <th>Responsable</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.TipoMovimiento == "ENTRADA")
                                    {
                                        <span class="badge bg-success">ENTRADA</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">SALIDA</span>
                                    }
                                </td>
                                <td>
                                    @(item.Proveedor?.NombreEmpresa ?? "---")
                                </td>
                                <td>
                                    @(item.Usuario?.Nombre ?? "---")
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="PdfReporte" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" target="_blank">
                                            📄 PDF
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de eliminar este registro? Esto revertirá el stock.');">
                                            🗑 Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>