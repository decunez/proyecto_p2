@model ProyectoP2.Web.Models.Comprobante

@{
    Layout = null; // Sin layout para que sea una hoja limpia
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comprobante #@Model.Id</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 40px;
        }

        .watermark {
            position: absolute;
            opacity: 0.1;
            font-size: 5rem;
            transform: rotate(-45deg);
            top: 30%;
            left: 20%;
            color: gray;
            z-index: -1;
        }
    </style>
</head>
<body>

    <div class="watermark">@Model.TipoMovimiento</div>

    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
        <div>
            <h2 class="mb-0">Comprobante de Inventario</h2>
            <small class="text-muted">Sistema de Gestión P2</small>
        </div>
        <div class="text-end">
            <h4 class="text-danger">Nº @Model.Id.ToString("D6")</h4>
            <span class="badge bg-primary fs-6">ESTADO: GESTIONADO</span>
        </div>
    </div>

    <div class="row mb-4 p-3 bg-light rounded">
        <div class="col-6">
            <p><strong>Fecha de Emisión:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Tipo de Movimiento:</strong> @Model.TipoMovimiento</p>
            <p><strong>Responsable (Usuario):</strong> @(Model.Usuario?.Nombre ?? "Sistema / Admin")</p>
        </div>
        <div class="col-6">
            <p><strong>Proveedor:</strong> @(Model.Proveedor?.NombreEmpresa ?? "---")</p>
            <p><strong>Notas:</strong> Registro generado automáticamente.</p>
        </div>
    </div>

    <table class="table table-bordered border-dark">
        <thead class="table-secondary text-center">
            <tr>
                <th>Producto / Item</th>
                <th style="width: 150px;">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Detalles != null && Model.Detalles.Any())
            {
                foreach (var det in Model.Detalles)
                {
                    <tr>
                        <td>@(det.Producto?.Nombre ?? "Producto ID " + det.ProductoId)</td>
                        <td class="text-center fw-bold fs-5">@det.Cantidad</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No hay detalles registrados.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-5 pt-5 border-top">
        <div class="row text-center">
            <div class="col-6">
                <br /><br />
                __________________________<br />
                <strong>Firma Responsable</strong><br />
                @(Model.Usuario?.Nombre ?? "Usuario")
            </div>
            <div class="col-6">
                <br /><br />
                __________________________<br />
                <strong>Recibido / Entregado</strong>
            </div>
        </div>
    </div>

    <script>
        // Opcional: Auto-imprimir al abrir
        window.print();
    </script>
</body>
</html>