@model ProyectoP2.Web.Models.Comprobante

@{
    ViewData["Title"] = "Registro de Inventario";
    // Recuperamos listas del controlador para evitar nulos
    var productos = ViewBag.ListaProductos as IEnumerable<ProyectoP2.Web.Models.Producto> ?? new List<ProyectoP2.Web.Models.Producto>();
    var proveedores = ViewBag.ListaProveedores as SelectList;
}



<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">📦 Registro de Altas y Bajas</h5>
    </div>
    <div class="card-body">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="mb-0">• @error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="Create" id="formComprobante" autocomplete="off">
            @Html.AntiForgeryToken()

            <div class="row g-3 p-3 bg-light border rounded mb-4">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Fecha</label>
                    <input asp-for="Fecha" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Tipo Movimiento</label>
                    <select asp-for="TipoMovimiento" class="form-select">
                        <option value="ENTRADA">ENTRADA (Compra/Alta)</option>
                        <option value="SALIDA">SALIDA (Venta/Baja)</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Proveedor / Destino</label>
                    <select asp-for="ProveedorId" class="form-select" asp-items="proveedores"></select>
                </div>

            </div>

            <h6 class="border-bottom pb-2 mb-3">Detalle de Productos</h6>

            <div class="row g-3 align-items-end mb-3">
                <div class="col-md-5">
                    <label class="form-label">Producto</label>
                    <select id="selectProducto" class="form-select" onchange="actualizarStockVisual()">
                        <option value="">-- Seleccione un producto --</option>
                        @foreach (var p in productos)
                        {
                            <option value="@p.Id" data-stock="@p.StockActual">@p.Nombre</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label text-muted">Stock Actual</label>
                    <input type="text" id="txtStock" class="form-control bg-light" readonly placeholder="-" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Cantidad</label>
                    <input type="number" id="txtCantidad" class="form-control" value="1" min="1" />
                </div>

                <div class="col-md-2">
                    <button type="button" class="btn btn-success w-100" onclick="agregarFila()">
                        + Agregar
                    </button>
                </div>
            </div>

            <div class="table-responsive mb-4">
                <table class="table table-bordered table-striped" id="tablaDetalles">
                    <thead class="table-dark">
                        <tr>
                            <th>Producto</th>
                            <th style="width: 150px;" class="text-center">Cantidad</th>
                            <th style="width: 100px;" class="text-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

                <div id="msgVacio" class="text-center text-muted p-3 border border-top-0">
                    No hay productos agregados.
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">CONFIRMAR Y GUARDAR MOVIMIENTO</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Función para mostrar el stock al seleccionar producto
        function actualizarStockVisual() {
            var select = document.getElementById("selectProducto");
            var stock = select.options[select.selectedIndex].getAttribute("data-stock");
            document.getElementById("txtStock").value = stock ? stock : "-";
        }

        // Función para agregar fila a la tabla
        function agregarFila() {
            var select = document.getElementById("selectProducto");
            var idProducto = select.value;
            var nombreProducto = select.options[select.selectedIndex].text;
            var cantidad = parseInt(document.getElementById("txtCantidad").value);

            // Validaciones
            if (!idProducto) {
                alert("Seleccione un producto.");
                return;
            }
            if (isNaN(cantidad) || cantidad <= 0) {
                alert("Ingrese una cantidad válida mayor a 0.");
                return;
            }

            // Ocultar mensaje de vacío
            document.getElementById("msgVacio").style.display = 'none';

            var tbody = document.querySelector("#tablaDetalles tbody");
            var indice = tbody.rows.length; // Para indexar la lista correctamente en C#

            var fila = `
                <tr>
                    <td>
                        <input type="hidden" name="Detalles[${indice}].ProductoId" value="${idProducto}" />
                        <input type="hidden" name="Detalles[${indice}].Subtotal" value="0" /> ${nombreProducto}
                    </td>
                    <td class="text-center">
                        <input type="hidden" name="Detalles[${indice}].Cantidad" value="${cantidad}" />
                        <strong>${cantidad}</strong>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-danger btn-sm" onclick="eliminarFila(this)">Eliminar</button>
                    </td>
                </tr>
            `;

            tbody.insertAdjacentHTML('beforeend', fila);

            // Resetear campos
            select.value = "";
            document.getElementById("txtCantidad").value = "1";
            document.getElementById("txtStock").value = "-";
        }

        function eliminarFila(btn) {
            var row = btn.parentNode.parentNode;
            row.parentNode.removeChild(row);

            // Reordenar índices es complejo en JS puro, lo ideal es enviar y limpiar.
            // Si borras una del medio, el ModelBinder de .NET puede fallar si los índices no son consecutivos (0, 1, 2...).
            // Truco rápido: Recargar indices antes de enviar o usar un JS más avanzado.
            // Para este ejemplo simple: Si eliminas, intenta no dejar huecos o el sistema guardará solo hasta el hueco.

            // Verificamos si quedó vacía la tabla
            var tbody = document.querySelector("#tablaDetalles tbody");
            if (tbody.rows.length === 0) {
                document.getElementById("msgVacio").style.display = 'block';
            }

            reindexarFilas();
        }

        // Pequeña ayuda para que ASP.NET lea bien la lista si borras filas intermedias
        function reindexarFilas() {
            var filas = document.querySelectorAll("#tablaDetalles tbody tr");
            filas.forEach((fila, index) => {
                // Actualizar name="Detalles[X].ProductoId"
                fila.querySelectorAll("input").forEach(input => {
                    var name = input.getAttribute("name");
                    if(name) {
                        var newName = name.replace(/Detalles\[\d+\]/, `Detalles[${index}]`);
                        input.setAttribute("name", newName);
                    }
                });
            });
        }
    </script>
}