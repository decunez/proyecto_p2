@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROYECTO PARCIAL 2</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoP2.Web.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        /* Menú desplegable en PC */
        @@media all and (min-width: 992px) {
            .dropdown:hover .dropdown-menu

        {
            display: block;
            margin-top: 0;
        }

        }

        /* --- ESTILOS DEL NUEVO WIDGET DE CHAT --- */
        .btn-flotante {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #0d6efd;
            color: white;
            border: none;
            z-index: 9999;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            transition: transform 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-flotante:hover {
                transform: scale(1.1);
                background-color: #0b5ed7;
                color: #fff;
            }

        #widgetSoporte {
            position: fixed;
            bottom: 100px;
            right: 30px;
            width: 340px;
            z-index: 9999;
            border-radius: 10px;
            display: none; /* Oculto por defecto */
            border: none;
        }

        /* Burbujas de chat */
        .msg-bubble {
            padding: 8px 12px;
            border-radius: 15px;
            margin-bottom: 8px;
            font-size: 0.9rem;
            max-width: 85%;
            word-wrap: break-word;
        }

        .msg-yo {
            background-color: #d1e7dd;
            color: #0f5132;
            align-self: flex-end;
            margin-left: auto;
            border-bottom-right-radius: 2px;
        }

        .msg-soporte {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            align-self: flex-start;
            margin-right: auto;
            border-bottom-left-radius: 2px;
        }
    </style>
</head>
<body>
    <header>
        @if (Context.Session.GetString("UsuarioNombre") != null)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PROYECTO PARCIAL 2</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">USUARIOS</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    INVENTARIO
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Inventario" asp-action="Index">📦 Productos</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Movimientos" asp-action="Index">📜 Kardex</a></li>
                                    <li><a class="dropdown-item" asp-controller="Categorias" asp-action="Index">📂 Categorías</a></li>
                                    <li><a class="dropdown-item" asp-controller="Proveedores" asp-action="Index">🚚 Proveedores</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Comprobantes" asp-action="Index">📦 Altas y Bajas</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">Hola, <b>@HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre")</b></span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-danger text-danger" asp-area="" asp-controller="Acceso" asp-action="Logout" style="border: 1px solid red; margin-left: 10px;">Cerrar Sesión</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Acceso" asp-action="Login">Iniciar Sesión</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Daniel_Cuñez.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <button id="btnFlotante" onclick="toggleWidget()" class="btn-flotante shadow">
        <i class="fa fa-comments fa-2x"></i>
    </button>

    <div id="widgetSoporte" class="card shadow widget-oculto">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h6 class="m-0" id="tituloWidget"><i class="fa fa-headset me-2"></i>Soporte</h6>
            <button type="button" class="btn-close btn-close-white" onclick="toggleWidget()"></button>
        </div>

        <div class="card-body p-0" style="height: 380px; overflow: hidden; position: relative;">

            <div id="vistaFormulario" class="p-3">
                <p class="small text-muted text-center">👋 ¡Hola! Completa tus datos para iniciar el chat.</p>
                <input type="text" id="txtNombreWidget" class="form-control mb-2" placeholder="Tu Nombre">
                <input type="email" id="txtEmailWidget" class="form-control mb-2" placeholder="Tu Correo">
                <textarea id="txtConsultaWidget" class="form-control mb-3" rows="3" placeholder="¿Cómo podemos ayudarte?"></textarea>
                <button class="btn btn-primary w-100" onclick="crearTicketWidget()">Iniciar Chat <i class="fa fa-paper-plane ms-1"></i></button>
            </div>

            <div id="vistaChat" class="d-flex flex-column h-100 d-none" style="background-color: #f8f9fa;">
                <div id="chatClienteCaja" class="flex-grow-1 p-3" style="overflow-y: auto;">
                </div>
                <div class="p-2 border-top bg-white d-flex gap-2">
                    <input type="text" id="txtMensajeCliente" class="form-control form-control-sm" placeholder="Escribe un mensaje..." onkeypress="handleEnter(event)">
                    <button class="btn btn-sm btn-primary" onclick="enviarMensajeCliente()"><i class="fa fa-paper-plane"></i></button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // [IMPORTANTE] Asegúrate que este puerto es el correcto de tu API
        const API_URL_WIDGET = "https://localhost:7232/api/Soporte";

        let widgetTicketId = 0;
        let widgetInterval = null;

        // AL CARGAR: Revisar si hay chat activo en memoria
        document.addEventListener("DOMContentLoaded", () => {
            const guardado = localStorage.getItem("chatTicketId");
            if (guardado) {
                widgetTicketId = parseInt(guardado);
                console.log("Recuperando chat ID:", widgetTicketId);
                mostrarVistaChat();
            }
        });

        // Abrir/Cerrar
        function toggleWidget() {
            const w = document.getElementById("widgetSoporte");
            const btn = document.getElementById("btnFlotante");

            if (w.style.display === "none" || w.style.display === "") {
                w.style.display = "block";
                btn.classList.add("d-none"); // Ocultar botón redondo al abrir
            } else {
                w.style.display = "none";
                btn.classList.remove("d-none"); // Mostrar botón redondo al cerrar
            }
        }

        // Crear Ticket (POST inicial)
        async function crearTicketWidget() {
            const nombre = document.getElementById("txtNombreWidget").value;
            const email = document.getElementById("txtEmailWidget").value;
            const desc = document.getElementById("txtConsultaWidget").value;

            if(!nombre || !desc) { alert("Por favor ingresa nombre y consulta"); return; }

            const datos = {
                NombreCliente: nombre,
                Email: email,
                Asunto: "Chat Web",
                Descripcion: desc
            };

            try {
                const res = await fetch(API_URL_WIDGET, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify(datos)
                });

                if(res.ok) {
                    const data = await res.json();
                    widgetTicketId = data.id; // Guardar ID

                    // PERSISTENCIA: Guardar en navegador
                    localStorage.setItem("chatTicketId", widgetTicketId);

                    mostrarVistaChat();
                } else {
                    alert("Error al iniciar chat. Intente nuevamente.");
                }
            } catch(e) { console.error(e); alert("Error de conexión"); }
        }

        // Cambiar interfaz a modo Chat
        function mostrarVistaChat() {
            document.getElementById("vistaFormulario").classList.add("d-none");
            document.getElementById("vistaChat").classList.remove("d-none");
            document.getElementById("tituloWidget").innerText = "Ticket #" + widgetTicketId;

            cargarMensajesWidget();
            // Iniciar polling cada 3 seg
            if(!widgetInterval) widgetInterval = setInterval(cargarMensajesWidget, 3000);
        }

        // Leer Mensajes (GET)
        async function cargarMensajesWidget() {
            if(!widgetTicketId) return;
            try {
                const res = await fetch(`${API_URL_WIDGET}/${widgetTicketId}/mensajes`);
                if(res.ok) {
                    const msjs = await res.json();
                    const caja = document.getElementById("chatClienteCaja");
                    caja.innerHTML = ""; // Limpiar

                    msjs.forEach(m => {
                        const texto = m.contenido || m.Contenido;
                        // Ajuste para detectar mayúsculas/minúsculas de la API
                        let esAdmin = false;
                        if (m.esAdmin !== undefined) esAdmin = m.esAdmin;
                        else if (m.EsAdmin !== undefined) esAdmin = m.EsAdmin;

                        const div = document.createElement("div");
                        div.className = `msg-bubble ${esAdmin ? 'msg-soporte' : 'msg-yo'}`;
                        div.innerHTML = `<strong>${esAdmin ? 'Soporte' : 'Tú'}</strong><br>${texto}`;
                        caja.appendChild(div);
                    });
                    // Auto-scroll al final
                   // caja.scrollTop = caja.scrollHeight;
                }
            } catch(e) { console.error("Error polling", e); }
        }

        // Enviar Mensaje (POST)
        async function enviarMensajeCliente() {
            const input = document.getElementById("txtMensajeCliente");
            const texto = input.value;
            if(!texto.trim()) return;

            const datos = {
                soporteId: widgetTicketId,
                contenido: texto,
                esAdmin: false // Es el cliente
            };

            await fetch(`${API_URL_WIDGET}/${widgetTicketId}/mensajes`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(datos)
            });

            input.value = "";
            cargarMensajesWidget(); // Recargar ya
        }

        // Permitir enviar con Enter
        function handleEnter(e) {
            if(e.key === "Enter") enviarMensajeCliente();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>