@model IEnumerable<ProyectoP2.Web.Models.Proveedor>

<div class="container mt-4">
    <h2 class="mb-3">🚚 Gestión de Proveedores</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-success">➕ Nuevo Proveedor</a>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="busqueda" class="form-control" placeholder="Buscar por Empresa o Contacto..." value="@ViewData["BusquedaActual"]">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Empresa</th>
                <th>Contacto</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.NombreEmpresa</td>
                    <td>@item.ContactoNombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar al proveedor @item.NombreEmpresa?');">🗑️ Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>