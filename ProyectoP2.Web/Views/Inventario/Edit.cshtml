@model ProyectoP2.Web.Models.Producto

<h2>Editar Producto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6 form-group mb-2">
           <label>Nombre</label>
           <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="col-md-6 form-group mb-2">
            <label>Código de Barras</label>
            <input asp-for="CodigoBarra" class="form-control" />
        </div>
    </div>

    <div class="form-group mb-2">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 form-group mb-2">
            <label>Precio Costo</label>
            <input asp-for="PrecioCosto" class="form-control" />
        </div>
        <div class="col-md-4 form-group mb-2">
            <label>Precio Venta</label>
            <input asp-for="PrecioVenta" class="form-control" />
        </div>

        <div class="col-md-4 form-group mb-2">
            <label>Stock Actual</label>
            <input asp-for="StockActual" class="form-control" />
        </div>
    </div>



    <div class="row">
        <div class="col-md-6 form-group mb-2">
            <label>Categoría</label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
                <option value="">-- Seleccione Categoría --</option>
            </select>
        </div>

        <div class="col-md-6 form-group mb-2">
            <label>Proveedor</label>
            <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.Proveedores">
                <option value="">-- Seleccione Proveedor --</option>
            </select>
        </div>
    </div>

    <br />
    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>